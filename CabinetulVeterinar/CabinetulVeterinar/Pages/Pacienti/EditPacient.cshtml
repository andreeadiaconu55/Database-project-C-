@page "{id?}"
@model CabinetulVeterinar.Pages.Pacienti.EditPacientModel

<h2>Editează Pacient</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-success">@Model.Message</p>
}

<form method="post">
    <div class="form-group">
        <label for="id">ID Pacient</label>
        <input type="text" id="id" name="Pacient.Id" class="form-control" readonly value="@Model.Pacient.Id" />
    </div>
    <div class="form-group">
        <label for="name">Nume</label>
        <input type="text" id="name" name="Pacient.Name" class="form-control" required value="@Model.Pacient.Name" />
    </div>
    <div class="form-group">
        <label for="specie">Specie</label>
        <input type="text" id="specie" name="Pacient.Specie" class="form-control" required value="@Model.Pacient.Specie" />
    </div>
    <div class="form-group">
        <label for="rasa">Rasă</label>
        <input type="text" id="rasa" name="Pacient.Rasa" class="form-control" required value="@Model.Pacient.Rasa" />
    </div>
    <div class="form-group">
        <label for="sex">Sex</label>
        <select id="sex" name="Pacient.Sex" class="form-control" required>
            <option value="Mascul" selected="@(Model.Pacient.Sex == "Mascul")">Mascul</option>
            <option value="Femelă" selected="@(Model.Pacient.Sex == "Femelă")">Femelă</option>
        </select>
    </div>
    <div class="form-group">
        <label for="dataNasterii">Data Nașterii</label>
        <input type="date" id="dataNasterii" name="Pacient.DataNasterii" class="form-control" required value="@Model.Pacient.DataNasterii?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="greutate">Greutate</label>
        <input type="number" step="0.1" id="greutate" name="Pacient.Greutate" class="form-control" required value="@Model.Pacient.Greutate" />
    </div>
    <button type="submit" class="btn btn-primary">Salvează</button>
</form>
