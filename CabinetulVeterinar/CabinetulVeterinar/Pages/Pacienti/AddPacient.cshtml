@page
@model CabinetulVeterinar.Pages.Pacienti.AddPacientModel

<h2>Adaugă Pacient</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-success">@Model.Message</p>
}

<form method="post">
    <div class="form-group">
        <label for="name">Nume</label>
        <input type="text" id="name" name="Pacient.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="specie">Specie</label>
        <input type="text" id="specie" name="Pacient.Specie" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="rasa">Rasă</label>
        <input type="text" id="rasa" name="Pacient.Rasa" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="sex">Sex</label>
        <select id="sex" name="Pacient.Sex" class="form-control" required>
            <option value="Mascul">Mascul</option>
            <option value="Femelă">Femelă</option>
        </select>
    </div>
    <div class="form-group">
        <label for="dataNasterii">Data Nașterii</label>
        <input type="date" id="dataNasterii" name="Pacient.DataNasterii" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="greutate">Greutate</label>
        <input type="number" step="0.1" id="greutate" name="Pacient.Greutate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Adaugă Pacient</button>
</form>
